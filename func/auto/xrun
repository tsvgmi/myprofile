# Check script in path to see if it needs xbit set (b/c windows editor clear it)

function xrun {
  local command=$1
  shift
  local comp

  if ! which $command >/dev/null; then
    for comp in . $path; do
      [ -f $comp/$command ] || continue
      command=$comp/$command
      set -x
      chmod +x $command
      set +x
      break
    done
  fi
  $command $@
}
