#!/bin/env bash
. ${0%/*}/../etc/tool.env
######################################################################
# File: 	shtool
# Description:  Simple addition to support using using shell
# Author:	Thien Vuong
#######################################################################

#------------------------------------------------------ Begin of script ---
#------------------------------------------------------ Begin of script ---
#------------------------------------------------------ Begin of script ---
F_subCommand $*
oper=$1; shift

case $oper in
  clone)
    user=$USER
    passwd=$(F_passwdGet)
    proxyip=10.55.79.200:9090/
    #proxyip=lxp6d199m0:6100
    program="git $oper"
    #program="curl -k"
    set -x
    export GIT_CURL_VERBOSE=1
    export GIT_SSL_NO_VERIFY=true
    export http_proxy=http://$user:$passwd@$proxyip
    export https_proxy=http://$user:$passwd@$proxyip
    set -x
    $program $@
    ;;

  *)                                                                   #{{{2
    F_usageOper $oper
    ;;
esac
exit 0                                                                 #{{{1

=begin
=NAME
cygtool - Utilities to support cygwin use.  Non-X environment

=SYNOPSIS
  * cygtool collect_winexe
  * cygtool explorer:multimon:vpngui
  * cygtool gvim
  * cygtool install_pkg bz2_package
  * cygtool reboot
  * cygtool rxvt [-s size] [host]
  * cygtool services
  * cygtool startx
  * cygtool stopx
  * cygtool sync-citrix
  * cygtool sync-cygwin

=DESCRIPTION

=end
